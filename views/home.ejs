<%- include('partials/header') %>

<div class="jumbotron centered">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="lead">Don't keep your secrets, share them anonymously!</p>

    <%if (user) { %>
    <p class="text"><%= user.googleDisplayName%></p>
    <p class="text"><%= user.googleEmail%></p>
    <hr />
    <a class="btn btn-dark btn-lg" href="/secrets" role="button">Secrets</a>
    <a class="btn btn-dark btn-lg" href="/logout" role="button">Log Out</a>
    <%} else {%>
    <p class="text">Not Logged In</p>
    <hr />
    <a class="btn btn-dark btn-lg" href="/secrets" role="button">Secrets</a>
    <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
    <%}%>
  </div>
</div>

<%- include('partials/footer') %>
